<!DOCTYPE html>
<html dir="<%=t :text_direction %>" lang="<%= params[:locale] || I18n.default_locale %>">
<head>
  <title><%=t :hello %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= request.original_url %><br/>
<%= params %><br/>

<% @link_string = (params[:locale] == "en") ? "عربي" : "English" %>
<% params[:locale] = (params[:locale] == "en") ? :ar : :en %>
<%= link_to @link_string, params %><br/>

<%= yield %>

</body>
</html>
